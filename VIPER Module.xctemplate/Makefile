XCODE_USER_TEMPLATES_DIR=$(HOME)/Library/Developer/Xcode/Templates/File Templates
TEMPLATE_GROUP_NAME=Personal Templates
TEMPLATE_NAME=VIPER Module.xctemplate

install_templates:
	mkdir -p "$(XCODE_USER_TEMPLATES_DIR)/$(TEMPLATE_GROUP_NAME)"
	rm -fR "$(XCODE_USER_TEMPLATES_DIR)/$(TEMPLATE_GROUP_NAME)/$(TEMPLATE_NAME)"
	cp -R . "$(XCODE_USER_TEMPLATES_DIR)/$(TEMPLATE_GROUP_NAME)/$(TEMPLATE_NAME)"

uninstall_templates:
	rm -fR "$(XCODE_USER_TEMPLATES_DIR)/$(TEMPLATE_GROUP_NAME)/$(TEMPLATE_NAME)"
